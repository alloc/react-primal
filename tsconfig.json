{
  "include": ["src"],
  "exclude": ["**/__tests__/**"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "lib",
    "preserveSymlinks": false,
    "strict": true,
    "target": "es5"
  }
}
